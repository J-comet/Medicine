<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hs.project.medicine">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <application
        android:name=".MediApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_medi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_medi_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Medicine"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".activitys.MapActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.ModifyUserActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.UserListActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.AddUserActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.SettingAlarmActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.MedicineDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.MainActivity"
            android:exported="false" />

        <meta-data android:name="com.kakao.sdk.AppKey" android:value="@string/api_key_kakao_map"/>

    </application>

</manifest>